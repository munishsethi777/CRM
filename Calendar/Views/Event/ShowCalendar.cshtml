        function loadCalendar(data) {
            var calendar = $('#calendar').fullCalendar({
                header: {
                    left: 'prev,next today',
                    center: 'title',
                    right: 'month,agendaWeek,agendaDay'
                },
                eventClick: function (calEvent, jsEvent, view) {
                    var URL = "EventDetails\\" + calEvent.id;
                    ShowDialog("Event Detail", 450, 300, URL);
                },
                selectable: false,
                selectHelper: true,
                
                editable: true,
                eventLimit: true,
                events: data
            });
        }

